<% layout('layouts/boilerplate') %>
<div class="container">
    <!-- <div class="u-align-center u-black u-container-style u-group u-opacity u-opacity-90 u-group-1" style="margin-top: -400px"> -->
        <div class="u-container-layout u-container-layout-5" >
          
          <form  method="post" class="needs-validation" novalidate>

            <div class="form-outline mb-4">
              <input required value="<%= track.name %>"  type="text" id="trackName" name="trackName" class="form-control form-control-lg" />
              <label class="form-label" for="trackName">Track Name</label> 
              
            
            </div>

            <div class="form-outline mb-4">
                <textarea maxlength="500" id="description" name="description" class="form-control form-control-lg"><%-  track.description %></textarea>
                <label class="form-label" for="description">Description</label>
            </div>

            <div class="d-flex justify-content-center" >
              <button type="submit"
                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" >Update</button>
            </div>
          </form>                      
        </div>
      </div>
</div>

<script src="/scripts/validateForms.js"></script>