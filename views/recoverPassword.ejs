<% layout('layouts/boilerplate') %>
<style>
  nav, footer{
    visibility: hidden;
    height: 0px;
}
.overlay{
    height: 560px !important;
}
</style>



<body  data-lang="en" >
    <div class="container">
        <link rel="stylesheet" href="/stylesheets/homeStyle.css">

<h2 class="text-center">FORGOT PASSWORD</h2>
    <section>
    <div style="position: relative;">
        <div class="row" >
            <div class="col-md" style="display: flex; justify-content:flex-end; align-items:end;">
                <img style="
                 width: 95%; height:95%" src="/images/Untitled6.jpg" alt="">
            </div>
            <div class="col-md" style="position:relative" >
                <img style="position:absolute; bottom:0; width: 85%; height: 85%; float: left;" src="/images/photo14607232374837a6dc9d0b212.jpg" alt="">
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="row">
            <div class="col-md">
                <img style="width: 85%; height: 85%; float: right;" src="images/953eab26afa3c9a923782213851ef5a898ec500ec9bcfd78bb9a4ec4308f0a1685aee29be363bb041ea889bb4457d8d30ee5ab4c65cc75f5df1f29_1280.jpg
                "alt="">
            </div>
            <div class="col-md">
                <img style=" width: 95%; height: 95%" src="images/xa.jpg" alt="">
            </div>
        </div>
        <div class="overlay">
            <div class="centerItems">
              <form method="POST" action="/recoverPassword" class="needs-validation" novalidate>
                <div class="form-outline mb-4">
                    <input readonly value="<%= email %>" required type="email" id="form3Example1cg" name="email" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example1cg">Email</label>
                </div>
                <div class="form-outline mb-4">
                  <input required type="number" id="form3Example1cg" name="code" class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example1cg">Recovery code</label>
                </div>
               
                <div class="form-outline mb-4">
                    <input required type="password" id="form3Example1cg" name="password" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example1cg">New Password</label>
                </div>

                <div class="d-flex justify-content-center" >
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" >Recover</button>
                </div>
              </form>          
            </div>
            
        </div>      
    </div>
</section>
</div>

<section>
<div style="margin-top: 100px;">
</div>
</section>
    

<script src="/scripts/validateForms.js"></script>
</body>
</html>

